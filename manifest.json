{
    "name": "Bugzilla Triage Helper",
    "version": "0.1",
    "background": {
        "scripts": ["bg.js"]
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "browser_action": {
        "default_title": "Bugzilla Triage Helper Configuration",
        "default_icon": {
            "48": "question.svg"
        }
    },
    "icons": {
        "48": "question.svg"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": [
              "https://bugzilla.mozilla.org/show_bug*",
              "https://bugzilla-dev.allizom.org/show_bug*"
          ],
          "js": ["content.js"],
          "css": ["content.css"],
          "run_at": "document_end"
        }
    ]
}
